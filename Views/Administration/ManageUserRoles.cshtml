@model List<UserRolesViewModel>

@{
    var UserId = ViewBag.UserId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.UserName</h3>
        </div>
        <div class="card-header">
            <h4>Manage Roles</h4>
        </div>
        <div class="card-body">
            @for(int i = 0; i < Model.Count; i++ ){
            <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName - @Model[i].Description
                    </label>
                </div>
            }
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-primary" value="Update"/>
            <a asp-action="EditUser" asp-controller="Administration" asp-route-UserId="@UserId" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>