@model CreateRoleViewModel
@{
    ViewBag.Title = "Create Role Page";
}

<h1>Create a new Role : </h1>

<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" placeholder="Name" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <label asp-for="RoleDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleDescription" class="form-control" placeholder="Description" />
        </div>
    </div>    
    <div class="form-group row mt-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create Role</button>
        </div>
    </div>
</form>